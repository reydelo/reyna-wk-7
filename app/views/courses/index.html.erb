<div class="container">
  <div class="page-header">
    <h1> <%= @user.user_name %> Course Index </h1></div>

    <ol class="breadcrumb">
      <li><%= link_to "Student Index", users_path %></li>
      <li><%= link_to @user.user_name, user_path(@user) %></li>
      <li class="active">Course Index</li>
    </ol>

    <table class="table table-striped">
      <thead>
        <tr>
          <th> Course Title </th>
          <th> Day or Night </th>
        </tr>
      </thead>

      <tbody>
        <% @user.courses.each do |c| %>
        <tr>
          <td><%= link_to c.title, user_course_path(@user, c) %></td>
          <% if c.day == true %>
          <td>Day</td>
          <% else %>
          <td>Night</td>
          <% end %>
          <td> <%= link_to 'Delete', user_course_path(@user, c), class: "btn btn-danger", method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
