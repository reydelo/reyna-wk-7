<div class="container">
  <div class="page-header"><h1>Add Course</h1></div>

<ol class="breadcrumb">
  <li><%= link_to @user.user_name, user_path(@user) %></li>
  <li class="active">Add Course</li>
</ol>

<%= form_for [@user, @course] do |f| %>

<div class= "form-horizontal">

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :title, 'Course Title' %>
    </div>
  </div>
  <div class = "col-md-4">
  <%= f.text_field :title, class: "form-control" %>
</div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :day, 'Day Class?' %>
    </div>
  <div class = "col-md-4">
  <%= f.check_box :day, class: "form-control" %>
</div>
</div>
</div>

  <div class="form-group>
">
<div class="field">
  <div class="control-label col-md-2">
    <%= f.label :night, 'Night Class?' %>
  </div>
</div>
<div class = "col-md-4">
    <%= f.check_box :night, class: "form-control" %>
</div>
</div>

<div class="form-group">
    <div class="col-md-4 col-md-offset-2">
      <div class="action">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% end %>

</div>
</div>
